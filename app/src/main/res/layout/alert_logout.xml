<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/dialog_bg_logout"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="@dimen/dim_gap_7"
		android:background="@drawable/dialog_bg_logout_title"
		android:orientation="horizontal">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/dim_gap_2"
			android:gravity="center"
			android:text="@string/str_logout_title"
			android:textColor="@android:color/white"
			android:textSize="@dimen/dim_font_3" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="@dimen/dim_gap_12"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/ID_TEXT_CONFIRM"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/dim_gap_8"
			android:text="@string/str_logout_verify"
			android:textAlignment="center"
			android:textColor="@android:color/black"
			android:textSize="@dimen/dim_font_3" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/button_border"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/ID_TXTVIEW_CANCEL"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:background="@drawable/button_left_border"
			android:gravity="center"
			android:padding="@dimen/dim_gap_2"
			android:text="@string/str_cancel"
			android:textColor="@color/color_text_gray"
			android:textSize="@dimen/dim_font_2" />
		<TextView
			android:layout_width="1dp"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:padding="@dimen/dim_gap_2"
			android:textColor="@color/button_text_color"
			android:textSize="@dimen/dim_font_2" />
		<TextView
			android:id="@+id/ID_TXTVIEW_CONFIRM"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center"
			android:padding="@dimen/dim_gap_2"
			android:text="@string/str_confirm"
			android:textColor="@color/qmui_config_color_blue"
			android:background="@drawable/button_right_border"
			android:textSize="@dimen/dim_font_2" />
	</LinearLayout>

</LinearLayout>