<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="@dimen/title_bar_height"
		android:background="@color/color_tab_selected">
		<ImageView
			android:id="@+id/ivBack"
			android:layout_width="@dimen/dim_icon_size"
			android:layout_height="@dimen/dim_icon_size"
			android:layout_centerVertical="true"
			android:layout_margin="@dimen/dim_gap_2"
			android:src="@drawable/ic_back_white"/>
		<TextView
			android:id="@+id/tvTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:textColor="@android:color/white"
			android:textSize="@dimen/dim_font_3"
			android:text="@string/str_register_user"/>
	</RelativeLayout>

	<!-- Content -->
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:paddingLeft="@dimen/dim_gap_4"
			android:paddingRight="@dimen/dim_gap_4">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="4"
				android:layout_marginTop="@dimen/dim_gap_5"
				android:orientation="vertical">
				<EditText
					android:id="@+id/edtPhone"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="@dimen/dim_gap_2"
					android:maxLength="11"
					android:background="@drawable/edt_bg_selector"
					android:inputType="number"
					android:singleLine="true"
					android:hint="@string/str_phone_number_hint"/>

				<!-- Required for Phone Number -->
				<TextView
					android:id="@+id/tvRequiredPhone"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="right"
					android:paddingRight="@dimen/dim_gap_1"
					android:paddingBottom="@dimen/dim_gap_2"
					android:textColor="@android:color/holo_red_dark"
					android:text="@string/str_required"/>
				<!-- User Name -->
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
					<EditText
						android:id="@+id/edtAcquire"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:padding="@dimen/dim_gap_2"
						android:maxLength="4"
						android:background="@drawable/edt_bg_selector"
						android:inputType="number"
						android:singleLine="true"
						android:hint="@string/str_acquire_code_hint"/>
					<Button
						android:id="@+id/btnAcquire"
						android:layout_width="wrap_content"
						android:layout_height="30dp"
						android:layout_alignParentRight="true"
						android:layout_centerVertical="true"
						android:textAllCaps="false"
						android:paddingLeft="@dimen/dim_gap_2"
						android:paddingRight="@dimen/dim_gap_2"
						android:background="@drawable/selector_button_orange"
						android:textSize="@dimen/dim_font_2"
						android:textColor="@android:color/white"
						android:text="@string/str_acquire_code"/>
				</RelativeLayout>

				<!-- Required for User Name -->
				<TextView
					android:id="@+id/tvRequiredAuthCode"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="right"
					android:paddingRight="@dimen/dim_gap_1"
					android:paddingBottom="@dimen/dim_gap_2"
					android:textColor="@android:color/holo_red_dark"
					android:text="@string/str_required"/>
				<!-- Password -->
				<EditText
					android:id="@+id/edtPwd"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="@dimen/dim_gap_2"
					android:maxLength="20"
					android:background="@drawable/edt_bg_selector"
					android:inputType="textPassword"
					android:singleLine="true"
					android:hint="@string/str_password_set_hint"/>

				<!-- Required for Password -->
				<TextView
					android:id="@+id/tvRequiredPwd"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="right"
					android:paddingRight="@dimen/dim_gap_1"
					android:paddingBottom="@dimen/dim_gap_2"
					android:textColor="@android:color/holo_red_dark"
					android:text="@string/str_required"/>
				<EditText
					android:id="@+id/edtConfirmPwd"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="@dimen/dim_gap_2"
					android:maxLength="20"
					android:background="@drawable/edt_bg_selector"
					android:inputType="textPassword"
					android:singleLine="true"
					android:hint="@string/str_new_password_confirm_hint"/>

				<!-- Required for Password -->
				<TextView
					android:id="@+id/rvRequiredConfirmPwd"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="right"
					android:paddingRight="@dimen/dim_gap_1"
					android:paddingBottom="@dimen/dim_gap_2"
					android:textColor="@android:color/holo_red_dark"
					android:text="@string/str_required"/>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="@dimen/dim_gap_10"
					android:padding="@dimen/dim_gap_2"
					android:orientation="horizontal">
					<ImageView
						android:id="@+id/ivCheckAgree"
						android:layout_width="@dimen/dim_size_checkbox"
						android:layout_height="@dimen/dim_size_checkbox"
						android:padding="@dimen/dim_gap_1"
						android:scaleType="fitCenter"
						android:layout_marginRight="@dimen/dim_gap_2"
						android:src="@drawable/check_selector"/>
					<TextView
						android:id="@+id/tvAgree"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:textSize="@dimen/dim_font_2"
						android:textColor="@android:color/black"
						android:textColorLink="@color/color_text_blue"/>
				</LinearLayout>
				<Button
					android:id="@+id/btnRegister"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="@dimen/dim_gap_3"
					android:padding="@dimen/dim_gap_1"
					android:textAllCaps="false"
					android:enabled="false"
					android:background="@drawable/selector_button_fill"
					android:textColor="@color/button_color"
					android:text="@string/str_register"/>
				<Button
					android:id="@+id/btnCancel"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="@dimen/dim_gap_3"
					android:layout_marginBottom="@dimen/dim_gap_4"
					android:padding="@dimen/dim_gap_1"
					android:textAllCaps="false"
					android:background="@drawable/selector_button_fill"
					android:textColor="@color/button_color"
					android:text="@string/str_cancel"/>
			</LinearLayout>

		</LinearLayout>
	</ScrollView>

</LinearLayout>