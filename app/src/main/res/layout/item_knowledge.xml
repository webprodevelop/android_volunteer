<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	android:layout_width="@dimen/dim_item_news_size"
	android:layout_height="@dimen/dim_item_news_size"
	android:padding="@dimen/dim_gap_2"
	android:gravity="center"
	android:orientation="vertical">

	<androidx.cardview.widget.CardView
		android:id="@+id/cvPicture"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		card_view:cardCornerRadius="@dimen/dim_radius_device"
		card_view:cardPreventCornerOverlap="false">

		<ImageView
			android:id="@+id/ivPicture"
			android:layout_width="@dimen/dim_item_icon_size"
			android:layout_height="@dimen/dim_item_icon_size"
			android:scaleType="centerCrop"
			android:src="@drawable/login_back"/>
	</androidx.cardview.widget.CardView>

	<TextView
		android:id="@+id/tvTitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/dim_gap_1"
		android:maxLines="1"
		android:ellipsize="end"
		android:textSize="@dimen/dim_font_11"
		android:textColor="@color/color_text_gray"
		android:text="Title"/>
</LinearLayout>
