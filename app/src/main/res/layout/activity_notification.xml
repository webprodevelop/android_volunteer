<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@android:color/white"
	tools:context="com.iot.volunteer.activity.ActivityAgree">
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="@dimen/title_bar_height"
		android:background="@color/color_tab_selected">
		<ImageView
			android:id="@+id/ID_IMGVIEW_BACK"
			android:layout_width="@dimen/dim_icon_size"
			android:layout_height="@dimen/dim_icon_size"
			android:layout_centerVertical="true"
			android:layout_margin="@dimen/dim_gap_2"
			android:src="@drawable/ic_back_white"/>
		<TextView
			android:id="@+id/ID_TXTVIEW_TITLE"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:textColor="@android:color/white"
			android:textSize="@dimen/dim_font_3"
			android:text="@string/str_notification_list"/>
		<ImageView
			android:id="@+id/ID_IMGVIEW_DELETE"
			android:layout_width="@dimen/dim_icon_size"
			android:layout_height="@dimen/dim_icon_size"
			android:layout_centerVertical="true"
			android:padding="@dimen/dim_gap_0"
			android:layout_marginEnd="@dimen/dim_gap_3"
			android:layout_alignParentEnd="true"
			android:src="@drawable/ic_delete"/>
		<ImageView
			android:id="@+id/ID_IMGVIEW_READALL"
			android:layout_width="@dimen/dim_icon_size"
			android:layout_height="@dimen/dim_icon_size"
			android:layout_centerVertical="true"
			android:layout_toStartOf="@id/ID_IMGVIEW_DELETE"
			android:padding="@dimen/dim_gap_0"
			android:layout_margin="@dimen/dim_gap_0"
			android:src="@drawable/ic_mark_read_24"/>
	</RelativeLayout>
	<ListView
		android:id="@+id/ID_LSTVIEW_NOTIFICATION"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:scrollbars="none"
		android:layout_margin="@dimen/dim_gap_4"
		android:layout_weight="1"/>
</LinearLayout>