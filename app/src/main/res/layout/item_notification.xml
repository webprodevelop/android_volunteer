<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/dim_gap_2">

		<ImageView
			android:id="@+id/ID_IMGVIEW_ICON"
			android:layout_width="@dimen/dim_icon_size"
			android:layout_height="@dimen/dim_icon_size"
			android:layout_alignParentStart="true"
			android:layout_centerVertical="true"
			android:layout_margin="@dimen/dim_gap_0"
			android:src="@drawable/ic_alarm"/>

		<TextView
			android:id="@+id/ID_TXTVIEW_TITLE"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginStart="@dimen/dim_gap_1"
			android:text="@string/app_name"
			android:layout_toEndOf="@+id/ID_IMGVIEW_ICON"
			android:textColor="@android:color/black"
			android:textSize="@dimen/dim_font_3" />

		<TextView
			android:id="@+id/ID_TXTVIEW_STATS"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginStart="@dimen/dim_gap_1"
			android:text="@string/app_name"
			android:layout_toEndOf="@+id/ID_TXTVIEW_TITLE"
			android:textColor="@android:color/black"
			android:textSize="@dimen/dim_font_2"/>

		<TextView
			android:id="@+id/ID_TXTVIEW_TIME"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:textSize="@dimen/dim_font_2"
			android:textColor="@android:color/black"
			android:text="2020-05-08 18:46"/>

	</RelativeLayout>

	<TextView
		android:id="@+id/ID_TXTVIEW_CONTENT"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/dim_gap_2"
		android:textSize="@dimen/dim_font_2"
		android:textColor="@android:color/black"
		android:text="Content"/>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TextView
			android:id="@+id/ID_BTN_DELETE"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:background="@drawable/selector_small_button_fill"
			android:paddingTop="@dimen/dim_gap_1"
			android:paddingBottom="@dimen/dim_gap_1"
			android:paddingLeft="@dimen/dim_gap_5"
			android:paddingRight="@dimen/dim_gap_5"
			android:layout_marginTop="@dimen/dim_gap_2"
			android:layout_marginBottom="@dimen/dim_gap_2"
			android:textSize="@dimen/dim_font_2"
			android:textColor="@android:color/white"
			android:text="@string/str_delete"/>
		<TextView
			android:id="@+id/ID_BTN_VIEW"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toLeftOf="@+id/ID_BTN_DELETE"
			android:background="@drawable/selector_small_button_fill"
			android:paddingTop="@dimen/dim_gap_1"
			android:paddingBottom="@dimen/dim_gap_1"
			android:paddingLeft="@dimen/dim_gap_5"
			android:paddingRight="@dimen/dim_gap_5"
			android:layout_marginRight="@dimen/dim_gap_4"
			android:layout_marginTop="@dimen/dim_gap_2"
			android:layout_marginBottom="@dimen/dim_gap_2"
			android:textSize="@dimen/dim_font_2"
			android:textColor="@android:color/white"
			android:text="@string/str_view"
			android:visibility="gone"/>
	</RelativeLayout>

</LinearLayout>